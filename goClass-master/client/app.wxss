.bg-blue {
  background-color: #add8e6;
}

.bg-gray {
  background-color: #e7e4e4;
}

.bg-green {
  background-color: #00c777;
}

.bg-black {
  background-color: #333;
}

.t-white {
  color: white;
}

.t-green {
  color: #00c777;
}

.t-blue {
  color: #b9dceb;
}

.t-black {
  color: #333;
}

.t-gray {
  color: gray;
}

