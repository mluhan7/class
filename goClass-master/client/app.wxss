  color: #c5c3c3;
}

.hint {
  margin-top: 5px;
  text-align: right;
  font-size: 12px;
  text-decoration: underline;
}

/*甜甜圈loading start*/

@keyframes donut-spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.donut {
  height: 60rpx;
  width: 60rpx;
  border: 4rpx solid #333;
  border-radius: 50%;
  animation: donut-spin 0.5s linear infinite;
}

.flex {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  align-content: flex-start;
}

.flex-row {
  display: flex;
  justify-content: flex-start;
  align-content: flex-start;
}

.flex-mid {
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
}

/*覆盖*/

button::after {
  border: none;
  margin: 0;
}

/* 未选中的样式 */

radio .wx-radio-input {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%; /* 圆角 *//* border: 2rpx solid red; */
}

/* 选中后 背景及勾 的样式 */

radio .wx-radio-input.wx-radio-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%; /* 圆角 */
  line-height: 28rpx;
  text-align: center;
  font-size: 30rpx; /* 勾大小 */
  color: #fff; /* 白色勾  */
  border: 1px solid #ffcb6b;
  background-color: #ffcb6b;
  transform: translate(-50%, -50%) scale(1);
}

.disradio radio .wx-radio-input.wx-radio-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%; /* 圆角 */
  line-height: 28rpx;
  text-align: center;
  font-size: 30rpx; /* 勾大小 */
  color: #fff; /* 白色勾  */
  background-color: #e8e9e9;
  border: 1px solid #e8e9e9;
  transform: translate(-50%, -50%) scale(1);
}
